{%- set projectName = 'diagnostics' %}
{%- set projectDir  = 'diagnostics' %}
{%- set miniappFlag = True %}
{%- set fix_enums   = False %}

{# Set the  compiler debug profile for runs in this suite #}
{# Options are ['fast-debug'|'full-debug'|'production'], omission defaults to 'fast-debug' #}
{%- set run_application_profile = '' %}

{%- set appDiagStemName = 'diagDiagnostics' %}
{%- set rdef_default    = "64" %}
{%- set mesh_rdef       = "64" %}
{%- set mesh_build      = "fast-debug" %}

{%- set application_configurations = { 'diagnostics' : ['default'] } %}

{%- set canned_configurations  = ['diagnostics'] %}

{%- set groups = {
'developer': [
    'validate_rose_meta_graph("diagnostics")',
    'check_style_graph()',
    'run_application("diagnostics", "default", resolutions=[("C3",)])',
    'check_compilers("diagnostics", "default", "fast-debug", resolution=("C3",))',
    'check_compilers("diagnostics", "default", "full-debug", resolution=("C3",))',
    'canned_test("diagnostics")'],
'nightly': [
    'null_task_graph()'] } %}

