EXEC_NAME="$1"

module load meto-gmake/4.3

echo "Running Pat build script" 

#This is where the gungho exe is
EXEC_PATH="${BIN_DIR}/${EXEC_NAME}"

echo "${EXEC_PATH}"

#Make sure we are in the location, otherwise the exe we end up in the wrong place
cd "${BIN_DIR}"
rm -f gungho_model+pat
#targeted file goes at the end (program)
#name of the 
pat_build -D link-instr="-L/opt/cray/alps/default/lib64" -D link-instr="-L/opt/cray/xpmem/0.1-2.0502.64982.5.3.ari/lib64" -Oapa "${EXEC_PATH}"
