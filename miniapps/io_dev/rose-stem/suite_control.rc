{%- set projectName = 'io_dev' %}
{%- set projectDir  = 'io_dev' %}
{%- set miniappFlag = True %}
{%- set fix_enums   = False %}

{# Set the  compiler debug profile for runs in this suite #}
{# Options are ['fast-debug'|'full-debug'|'production'], omission defaults to 'fast-debug' #}
{%- set run_application_profile = '' %}

{%- set appDiagStemName = 'diagIoDev' %}
{%- set rdef_default    = "64" %}
{%- set mesh_rdef       = "64" %}
{%- set mesh_build      = "fast-debug" %}

{%- set application_configurations = { 'io_dev' : ['default'] } %}

{%- set canned_configurations  = ['io_dev'] %}

{%- set groups = {
'developer': [
    'validate_rose_meta_graph("io_dev")',
    'check_style_graph()',
    'api_documentation_graph(publish=True)',
    'run_application("io_dev", "default", resolutions=[("C12",1800)],
                     env={"directives":{"default":{"mpi_parts":6,
                                                   "threads":1,
                                                   "xios_nodes":1,
                                                   "wallclock":"00:05:00"}}},
                     checkkgo=False, publish=True)',
    'check_compilers("io_dev", "default", "fast-debug",
                     resolution=("C12",1800))',
    'check_compilers("io_dev", "default", "full-debug",
                     resolution=("C12",1800))' ],
'nightly': [
    'null_task_graph()' ] } %}

